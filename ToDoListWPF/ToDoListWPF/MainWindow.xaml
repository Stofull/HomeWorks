<Window x:Class="MyNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDoList" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="todoListBox" HorizontalAlignment="Center" Height="250" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="newTaskTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,260,0,0"/>
        <Button Content="Add" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Margin="210,280,230,0" Click="AddTask"/>
        <Button Content="Remove" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Margin="290,280,150,0" Click="RemoveTask"/>
    </Grid>
</Window>